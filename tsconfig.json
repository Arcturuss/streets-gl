{
	"compilerOptions": {
		"module": "es6",
		"target": "es6",
		"allowJs": true,
		"sourceMap": true,
		"moduleResolution": "node",
		"alwaysStrict": true,
		"noImplicitAny": true,
		"noImplicitThis": true,
		"strictBindCallApply": true,
		"strictFunctionTypes": true,
		"resolveJsonModule": true
	},
	"include": [
		"src"
	]
}
